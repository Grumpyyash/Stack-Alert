<%- include("partials/header") -%>


<form class="" action="/yourAnswer" method="post">
  <div class="form-group">
    <h3>Q. <%= question %></h3>
    <label>Your Name</label>
    <input class="form-control" type="text" name="personName" autocomplete="off">
    <label>Your Answer</label>
    <textarea class="form-control" name="answerName" rows="5" cols="30"></textarea>
  </div>
    <button class="btn btn-primary" type="submit" name="button" value="<%= question %>">Publish</button>
</form>



